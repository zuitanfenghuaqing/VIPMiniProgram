/* releaseMsg.css*/
.msg_text{
    width: 668rpx;height: 880rpx;
    background-color:#fff;
    border: 1rpx solid #e5e5e5;
    margin: 32rpx auto;
    border-radius: 10rpx;
    padding: 30rpx 10rpx;
    font-size: 28rpx;
}
.radio-group{
    font-size: 28rpx;
    display: flex;
    width:680rpx;
    height:45rpx;
    align-items: center;
    margin: 0 auto 80rpx;   
    justify-content: flex-end;
    color: #2c2c2c;
}
.radio{
    width: 120rpx;height: 100%;
    display: flex;
    align-items: center;
}
.icon-guide{
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx;
}
.submitBtn{
    background-color: #10d279;
    color: white;
    border-radius: 0rpx !important;
    letter-spacing: 16rpx;
    font-size: 32rpx;
    padding: 8rpx 0;
}