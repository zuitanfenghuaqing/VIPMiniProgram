/**index.wxss**/
@import "/common/template/top-menu/top-menu.wxss";
.top {
  background: #fff;
  padding-top: 20rpx;
}

.head {
  display: flex;
  margin-bottom: 20rpx;
}

.head .icon-manage {
  width: 60rpx;
  height: 60rpx;
}

.head .head-item {
  flex-direction: column;
  flex: 1;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.top .notice{
  font-size: 28rpx;
  text-align: left;
}
  
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  color: #333;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px; 
  color: #e6e6e6;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ddd;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 6rpx;
}
