/**index.wxss**/

.top {
  background: #fff;
  padding-top: 20rpx;
}

.head {
  display: flex;
}

.head .icon-manage {
  width: 60rpx;
  height: 60rpx;
}

.head .head-item {
  flex-direction: column;
  flex: 1;
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  position: relative;
}

.head .head-item .redpoint {
  position: absolute;
  right: 33%;
  top: 10rpx;
  margin-top: -13rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #d23f3f;
  color: #fff;
  line-height: 25rpx;
  font-size: 22rpx;
}

.icon-notice {
  width: 31rpx;
  height: 30rpx;
  vertical-align: middle;
}

.top .notice {
  padding: 40rpx 30rpx;
  font-size: 28rpx;
  text-align: left;
}

.notice-redpoint {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -5rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #d23f3f;
}

/* components/top-menu.wxss */

.menu {
  position: relative;
}

.top-menu {
  display: flex;
  border-bottom: 1rpx solid #e6e6e6;
  height: 100rpx;
  line-height: 100rpx;
}

.top-menu .menu-item {
  flex: 1;
  display: flex;
  justify-content: center;
  position: relative;
  font-size: 26rpx;
  color: #666;
}

.active.menu-item {
  color: #10d279;
}

.top-menu .menu-item::after {
  position: absolute;
  content: " ";
  right: -1rpx;
  height: 50rpx;
  top: 22rpx;
  border-right: 1rpx solid #e6e6e6;
}

.top-menu .menu-item:last-child::after {
  content: none;
}

.triangle {
  position: relative;
  left: 10rpx;
  top: 50%;
  margin-top: -4rpx;
  height: 0px;
  width: 0px;
  border-bottom: 0;
  border-top: 8rpx solid #ccc;
  border-right: 13rpx solid transparent;
  border-left: 13rpx solid transparent;
}

.active .triangle {
  border-top: 0;
  border-bottom: 8rpx solid #10d279;
  border-right: 13rpx solid transparent;
  border-left: 13rpx solid transparent;
}

.child-item {
  display: none;
  position: absolute;
  left: 0;
  right: 0;
  top: 102rpx;
  background: #fff;
  z-index: 1;
  color: #333;
  padding: 25rpx;
  box-shadow: 0px 2rpx 10rpx #e6e6e6;
}

.child-item.show {
  display: block;
  transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);
}

.child-item view {
  line-height: 1;
  font-size: 28rpx;
  padding: 25rpx;
}

.child-item view.active {
  color: #10d279;
}

.product-img {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
}

.product-info {
  flex: 1;
  font-size: 24rpx;
}

.product-title {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.3;
  margin-bottom: 10rpx;
}

.product-status {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.discount {
  font-size: 24rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: #10d279;
  color: #fff;
  border-radius: 8rpx;
  padding: 0 8rpx;
}

.price {
  margin-right: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #d23f3f;
  display: flex;
}

.rmb {
  font-size: 18rpx;
  align-self: center;
  color: #d23f3f;
}

.sales {
  text-align: right;
  color: #999;
  flex: 1;
}
