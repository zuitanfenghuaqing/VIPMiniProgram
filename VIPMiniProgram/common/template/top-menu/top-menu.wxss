.top-menu {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e6e6e6;
  height: 100rpx;
  line-height: 100rpx;
}

.top-menu .menu-item {
  flex: 1;
  display: flex;
  justify-content: center;
  position: relative;
  font-size: 26rpx;
  color: #666;
}

.active.menu-item {
  color: #10d279;
}

.top-menu .menu-item::after {
  position: absolute;
  content: " ";
  right: -1rpx;
  height: 50rpx;
  top: 22rpx;
  border-right: 1rpx solid #e6e6e6;
}

.top-menu .menu-item:last-child::after {
  content: none;
}

.triangle {
  position: relative;
  left: 10rpx;
  top: 50%;
  margin-top: -4rpx;
  height: 0px;
  width: 0px;
  border-bottom: 0;
  border-top: 8rpx solid #ccc;
  border-right: 13rpx solid transparent;
  border-left: 13rpx solid transparent;
}

.active .triangle {
  border-top: 0;
  border-bottom: 8rpx solid #10d279;
  border-right: 13rpx solid transparent;
  border-left: 13rpx solid transparent;
}

.child-item {
  color:#333;
  padding: 25rpx;
}

.child-item view{
  line-height: 1;
  font-size: 28rpx;
  padding:25rpx;
}
.child-item view.active{
  color: #10d279;
}