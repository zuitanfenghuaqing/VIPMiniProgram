/**app.wxss**/
@import "common/lib/weui.wxss";

page {
  background-color: #f8f8f8;
  color:#666;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
             "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei",
             SimSun, sans-serif;
}

.container {
  display: flex;
  background: #fff;
  flex-direction: column;
  padding: 0;
  margin: 0 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}

page .container:first-child {
  border-top: 0;
}

.link:active {
  background-color: #ececec;
}

.cell {
  padding: 40rpx 50rpx;
  position: relative;
  display: flex;
  align-items: center;
  color: #333;
}

.cell::after {
  content: " ";
  position: absolute;
  left: 50rpx;
  bottom: 0;
  right: 0;
  border-bottom: 1rpx solid #e6e6e6;
}

.cell:last-child::after {
  content: none;
}

.cell-text {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: relative;
}

.cell-arrow {
  padding-right: 26rpx;
  position: relative;
}

.cell-arrow:after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ddd;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 6rpx;
}
